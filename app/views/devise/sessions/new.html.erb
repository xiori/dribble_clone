<div class="section bg-grey">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
      <h2 class="title is-2">Connexion</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <div class="control">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { class: "input", autocomplete: "email" },
                      wrapper:false,
                      label_html: { class: "label" } %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :password,
                          required: true,
                          input_html: { class: "input", autocomplete: "current-password" },
                          wrapper: false,
                          label_html: { class: "label" } %>
            </div>
          </div>
          <br/>  
          <%= f.button :submit, "Connexion", class: "button " %>
      <% end %>
      <div class="field">
        <div class="control">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
