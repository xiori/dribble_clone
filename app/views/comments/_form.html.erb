<%= simple_form_for([@shot, @shot.comments.build]) do |f| %>
    
        <%= f.input :name,
        input_html: {class: 'input'},
        wrapper: false,
        label_html: {class: 'label'}
        %>

        <%= f.input :content,
        input_html: {class: 'textarea'},
        wrapper: false,
        label_html: {class: 'label'}
        %>
        
        <%= f.button :submit, "Laisser un commentaire", class:"button" %>
<% end %>