<div class="section">
  <div class="container">
    <div class="columns is-centered ">
      <div class="column is-4">
       
        <%= simple_form_for(@shot) do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

          <div class="field">
              <div class="control">
                <%= f.input :title,
                  required: true,
                  wrapper: false,
                  input_html: { class: "input ", autocomplete: "" },
                  label_html: {class: "label has-text-black"}
                  %>
              </div>
          </div>  

          <div class="field">
              <div class="control">
                <%= f.input :description,
                  required: true,
                  wrapper: false,
                  input_html: { class: "input", autocomplete: "" },
                  label_html: {class: "label has-text-black"}
                  %>
              </div>
          </div> 

          <div class="field">   
            <%= f.label :image %>
            <%= f.file_field :image %>
          </div>

          <div class="form-actions">
            <%= f.button :submit , class: 'button' %>
          </div

        <% end %>
         

      

        </div>
    </div>
  </div>
</div>
